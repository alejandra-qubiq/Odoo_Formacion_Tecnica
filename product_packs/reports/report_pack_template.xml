<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_pack_custom_document">
        <t t-call="web.external_layout">
            <h1>
             <span t-field="o.name"/>
            </h1>
            <table class="table" style="width:100%">
                <thead>
                    <tr>
                        <th>Component</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.component_line_ids" t-as="component">
                        <td><span t-field="component.component_id"/></td>
                        <td style="text-align:right;"><span t-field="component.quantity"/></td>
                        <td style="text-align:right;"><span t-field="component.price"/></td>
                    </tr>
                </tbody>
            </table>
        </t>
    </template>

    <template id="report_pack_custom">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="user_story_packs.report_pack_custom_document"/>
            </t>
        </t>
    </template>
</odoo>
